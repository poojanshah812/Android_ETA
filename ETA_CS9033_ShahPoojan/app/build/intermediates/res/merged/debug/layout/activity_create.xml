<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nyu.cs9033.eta.controllers.CreateTripActivity"
    android:background="#93bbea">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:hint="E.g. New York"
        android:layout_marginTop="27dp"
        android:background="#ffffffff"
        android:layout_below="@+id/trip_name"
        android:layout_alignLeft="@+id/trip_name"
        android:layout_alignStart="@+id/trip_name" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_spot"
        android:hint="E.g. NYU Starbucks"
        android:background="#ffffffff"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trip_name"
        android:hint="E.g. Grad Trip"
        android:layout_marginTop="75dp"
        android:background="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:hint="E.g. 4/30/2016"
        android:background="#ffffffff"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/interest"
        android:layout_alignStart="@+id/interest" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/time"
        android:hint="E.g. 9:00"
        android:background="#fffefff9"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/participants"
        android:background="#ffffffff"
        android:hint="E.g. Sam, John"
        android:layout_alignTop="@+id/add_participant"
        android:layout_alignLeft="@+id/meeting_spot"
        android:layout_alignStart="@+id/meeting_spot"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Trip"
        android:id="@+id/trip_submit"
        android:background="#ffccbf"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:enabled="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Trip"
        android:id="@+id/trip_cancel"
        android:background="#ffccbf"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/trip_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="299dp"
        android:layout_marginStart="299dp"
        android:id="@+id/relativeLayout2">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Trip"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trip Name"
        android:id="@+id/textView2"
        android:layout_above="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/textView3"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meeting Spot"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Participants"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/participants"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Participant"
        android:id="@+id/add_participant"
        android:background="#ffccbf"
        android:layout_above="@+id/get_id"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_marginBottom="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interest"
        android:background="#ffffff"
        android:hint="E.g. Indian food"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Location"
        android:id="@+id/search_locn"
        android:layout_alignTop="@+id/interest"
        android:layout_alignRight="@+id/location"
        android:layout_alignEnd="@+id/location"
        android:layout_alignLeft="@+id/add_participant"
        android:layout_alignStart="@+id/add_participant"
        android:background="#ffccbf" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get ID"
        android:id="@+id/get_id"
        android:background="#ffccbf"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/add_participant"
        android:layout_alignStart="@+id/add_participant" />

</RelativeLayout>
